<?xml version="1.0"?>
<!DOCTYPE benchmark PUBLIC "+//IDN sosy-lab.org//DTD BenchExec benchmark 1.9//EN" "https://www.sosy-lab.org/benchexec/benchmark-2.3.dtd">
<benchmark tool="goblint" timelimit="15 min" hardtimelimit="16 min" memlimit="15 GB" cpuCores="4">

  <resultfiles>**/witness.*</resultfiles>

  <option name="--conf">conf/svcomp-ghost.json</option>

  <rundefinition name="protection">
    <option name="--set">ana.base.privatization</option>
    <option>protection</option>
    <option name="--set">ana.autotune.activated[-]</option>
    <option>octagon</option>
  </rundefinition>

  <rundefinition name="mutex-meet-nonrel">
    <option name="--set">ana.base.privatization</option>
    <option>mutex-meet</option>
    <option name="--set">ana.autotune.activated[-]</option>
    <option>octagon</option>
  </rundefinition>

  <rundefinition name="mutex-meet-rel">
    <option name="--set">ana.base.privatization</option>
    <option>mutex-meet</option>
    <option name="--set">ana.activated[+]</option>
    <option>apron</option>
    <option name="--set">ana.autotune.activated[-]</option>
    <option>octagon</option>
    <option name="--enable">ana.apron.invariant.diff-box</option>
    <option name="--disable">ana.base.invariant.enabled</option>
    <option name="--set">ana.apron.domain</option>
    <option>octagon</option>

    <option name="--set">ana.autotune.activated[-]</option>
    <option>wideningThresholds</option>
  </rundefinition>

  <tasks name="ConcurrencySafety-Main">
    <includesfile>SV_BENCHMARKS_DIR/c/ConcurrencySafety-Main.set</includesfile>
    <propertyfile>SV_BENCHMARKS_DIR/c/properties/unreach-call.prp</propertyfile>
  </tasks>

</benchmark>
